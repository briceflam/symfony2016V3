{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transport list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Temperaturetransport</th>
                <th>Delaitransport</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td><a href="{{ path('transport_show', { 'id': transport.id }) }}">{{ transport.id }}</a></td>
                <td>{{ transport.temperatureTransport }}</td>
                <td>{{ transport.delaiTransport }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('transport_show', { 'id': transport.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('transport_edit', { 'id': transport.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transport_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
